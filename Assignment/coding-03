// ● Create a Nested header Element using React.createElement(h1,h2,h3 inside a div with class “title”) 
// ○ Create the same element using JSX 
// ○ Create a functional component of the same with JSX 
// ○ Pass attributes into the tag in JSX 
// ○ Composition of Component(Add a component inside another) 
// ○ {TitleComponent} vs {<TitleComponent/>} vs {<TitleComponent></TitleComponent>} in JSX  
// ●Create a Header Component from scratch using Functional Components with JSX 
//  ○ Add a Logo on left 
//  ○ Add a search bar in middle 
//  ○ Add User icon on right 
//  ○ Add CSS to make it look nice



// 1️⃣We’ll make a structure like this:

// <div class="title">
//   <h1>Heading 1</h1>
//   <h2>Heading 2</h2>
//   <h3>Heading 3</h3>
// </div>


import React from "react";
import ReactDOM from "react-dom/client";


const header = React.createElement("div", { className: "title" }, [
  React.createElement("h1", {}, "Namaste React🚀" ),
  React.createElement("h2", {}, "Learning React Basics"),
  React.createElement("h3", {}, "By Pallavi Tripathi"),
]);


const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(header)



// 2️⃣


const jsxHeader = (
  <div className="title">
    <h1>Namaste React🚀</h1>
    <h1>Namaste React2🚀</h1>
    <h1>Namaste React3🚀</h1>
  </div>
);

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(jsxHeader);


// 3️⃣

const HeadingComponent = () => (
  <div className="title">
    <h1>Namaste React🚀</h1>
    <h1>Namaste React2🚀</h1>
    <h1>Namaste React3🚀</h1>
  </div>
);

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<HeadingComponent/>);


// 4️⃣

const Car = () => (
  <div className="title">
    <h1>Namaste React🚀 Let's Drive</h1>
  </div>
);

const HeadingComponent = () => (
  <div className="title" tabIndex="5">
    <Car/>
    <h1>Namaste React🚀</h1>
    <h1>Namaste React2🚀</h1>
    <h1>Namaste React3🚀</h1>
  </div>
);

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<HeadingComponent />);

// 5️⃣

const Car = () => (
  <div className="title">
    <h1>Namaste React🚀 Let's Drive</h1>
  </div>
);

const HeadingComponent = () => (
  <div className="title" tabIndex="5">
    {Car()}
    <Car> </Car>
    <Car/>
    <h1>Namaste React🚀</h1>
    <h1>Namaste React2🚀</h1>
    <h1>Namaste React3🚀</h1>
  </div>
);

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<HeadingComponent />);


<!-- 🕕6️⃣ -->
// Functional Component
const Header = () => {
  return (
    <header className="header">
      {/* Logo on left */}
      <div className="logo">
        <img
          src="https://via.placeholder.com/50"
          alt="Logo"
        />
        <h2>MyApp</h2>
      </div>

      {/* Search bar in middle */}
      <div className="search-bar">
        <input type="text" placeholder="Search..." />
        <button>🔍</button>
      </div>

      {/* User icon on right */}
      <div className="user-icon">
        <img
          src="https://via.placeholder.com/40"
          alt="User"
        />
      </div>
    </header>
  );
};

// Render to DOM
const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<Header/>)